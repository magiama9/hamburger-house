<div class="container">
  <form action="/burgers" method="POST">
    <div class="form-row">
      <div class="col-2"></div>
      <div class="col">
        <input type="text" name="burger" class="form-control" placeholder="Add a Burger">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <div class="col-2"></div>
    </div>

  </form>
  <div class="row">
    <div class="col-12">
      <div class="burger">
        <div class="line line-1">
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
        </div>
        <div class="line line-2"></div>
        <div class="line line-3"></div>
        <div class="line line-4"></div>
        <div class="line line-5"></div>
      </div>
      <div class="underline"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <!-- UnEaten Side -->
      <ul class="list-group" id="uneaten">
      </ul>
    </div>
    <div class="col-8"></div>

    <div class="col-2">
      <!-- Devoured side -->
      <ul class="list-group" id="eaten">
      </ul>
    </div>
  </div>
</div>